# === DATABASE ===
# For local development
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<your_postgres_password>
POSTGRES_DB=project_operation_hub
DB_HOST=localhost
DB_PORT=5432

# === APPLICATION ===
API_PORT=4000
NODE_ENV=development
APP_FRONTEND_URL="http://localhost:3000"

# === GITHUB INTEGRATION ===
# Personal Access Token with repo, admin:org_hook scopes
GITHUB_TOKEN=<your_github_personal_access_token>
# The name of your GitHub organization (if applicable)
GITHUB_ORG=<your_github_organization>
# The secret used to secure webhooks from GitHub to this app
GITHUB_WEBHOOK_SECRET=<a_strong_random_secret>

# === EMAIL (SMTP) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=<your_smtp_email_address>
SMTP_PASSWORD=<your_smtp_app_password>

# === AUTHENTICATION (JWT) ===
JWT_ACCESS_TOKEN_SECRET=<a_strong_random_secret_for_access_tokens>
JWT_REFRESH_TOKEN_SECRET=<a_strong_random_secret_for_refresh_tokens>
JWT_EMAIL_VERIFICATION_SECRET=<a_strong_random_secret_for_email_verification>
JWT_PASSWORD_RESET_SECRET=<a_strong_random_secret_for_password_reset>
JWT_ACCESS_TOKEN_EXPIRATION=15m
JWT_REFRESH_TOKEN_EXPIRATION=7d

# === GOOGLE OAUTH ===
GOOGLE_CLIENT_ID=<your_google_oauth_client_id>
GOOGLE_CLIENT_SECRET=<your_google_oauth_client_secret>
GOOGLE_CALLBACK_URL=http://localhost:4000/auth/google/redirect

# === CLOUDINARY (FILE UPLOADS) ===
CLOUDINARY_CLOUD_NAME=<your_cloudinary_cloud_name>
CLOUDINARY_API_KEY=<your_cloudinary_api_key>
CLOUDINARY_API_SECRET=<your_cloudinary_api_secret>

# === JENKINS INTEGRATION ===
# URL of your Jenkins server
JENKINS_URL=http://localhost:8080
# Jenkins username
JENKINS_USER=<your_jenkins_username>
# Jenkins API token for the user
JENKINS_TOKEN=<your_jenkins_api_token>
# Secret to secure the webhook from GitHub that triggers Jenkins
GITHUB_JENKINS_WEBHOOK_SECRET=<another_strong_random_secret>
# API Key to secure the callback from Jenkins to this app
JENKINS_API_KEY=<a_third_strong_random_secret>


